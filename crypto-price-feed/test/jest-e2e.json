{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@config": [
      "<rootDir>/../src/config"
    ],
    "@database": [
      "<rootDir>/../src/database"
    ],
    "@common": [
      "<rootDir>/../src/common"
    ],
    "@price": [
      "<rootDir>/../src/price"
    ]
  }
}
